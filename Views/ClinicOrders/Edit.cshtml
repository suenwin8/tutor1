}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="contact-form">
            <div id="showDetails">
                <p><b>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</b></p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
